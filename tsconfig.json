{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "ESNext",
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "types": ["vite/client"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }